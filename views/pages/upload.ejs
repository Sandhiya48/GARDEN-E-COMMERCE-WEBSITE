        <section id="page-header">
            <h2>Product Upload</div></h2>
            <p></p>
        </section>
        
        <section id="upload">

            <div class="container">
                <form action="/add" method="post" enctype="multipart/form-data">
                    <div class="a">
                    <div><h4>Product Name:</h4>
                    <input type="text" placeholder="Product Name" name="name" required>
                    <h4>Seller:</h4>
                    <input type="text" placeholder="Seller" name="seller" required>
                    <h4>Category:</h4>
                    <input type="text" placeholder="Category" name="category" required></div>
                    <div><h4>Description:</h4>
                    <textarea name="" id="" cols="70" rows="10" name="desc" required>Description:</textarea></div>
                    </div>
                    <div class="a"><div><h4>Cost:</h4>
                    <input type="text" placeholder="Cost" name="cost" required></div>
                    <div><h4>Quantity:</h4>
                    <input type="number" min="1" name="qty" required></div></div>
                    <div><h4>Images:</h4>
                    <input type="file" name="img1" required>
                    <input type="file" name="img2" required>
                    <input type="file" name="img3" required>
                    <input type="file" name="img4" required></div>
                    <button class="normal" type="submit">Upload</button>
                </form>
            </div>           

        </section>

